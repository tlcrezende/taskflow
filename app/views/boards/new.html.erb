<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-3xl">
        <%= form_with model:@board, local: true, class: "space-y-8 divide-y divide-gray-200" do |f| %>
            <div class="space-y-8 divide-y divide-gray-200">
                <div class="pt-8">
                    <div>
                        <h3 class="text-lg font-medium leading-6 text-gray-900">New Board</h3>
                        <p class="mt-1 text-sm text-gray-500">This form create a new board.</p><br>
                    </div>
                    <div class="mt-6 grid grid-cols-1 grap-y-6 gap-x-4 sm:grid-cols-6">
                        <div class="sm:col-span-6">
                            <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
                            <div class="mt-1">
                                <%= f.text_field :name, class: "block w-full flex-1 rounded-none rounded-r-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="pt-5">
                <div class="flex justify-end">
                    <%= link_to "Cancel", root_path, class: "ml-5 rounded-md border border-gray-300 bg-white py-2 px-3 text-sm font-medium leading-4 text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
                    <%= f.submit "Create Board" , class: "mr-5 inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
                </div>
            </div>
        <% end %>
    </div>
</div>
